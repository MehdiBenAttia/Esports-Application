{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Les jeux disponibles</h4>
                <a class="btn btn-outline-dark " href="{{ path('A') }}" ><i class="fa-solid fa-circle-plus"></i> Ajouter un nouveau jeu</a>
{#                <p class="card-description">#}
{#                    Add class <code>.table-{color}</code>#}
{#                </p>#}
                <div class="table-responsive pt-3">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>Nom du jeu</th>
                            <th>Image</th>
                            <th>Type</th>
                            <th>Date de sortie</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr class="table-hover">
                            {%  for var in jeux %}
                            <td>{{ var.getId() }}</td>
                            <td>{{ var.nom }}</td>
                            <td><img src="{{ asset('/uploads/images/'~var.image) }}" alt="" width="150">
                            </td>
                            <td>{{ var.type }}</td>
                            <td>{{ var.dates|date("m/d/y") }}</td>
                            <td>
                                <a class="btn btn-outline-dark" type="button" href="{{ path('U',{'id':var.id}) }}" ><i class="fa-solid fa-pen"></i>Update</a>
                            </td>
                            <td><a class="btn btn-outline-danger" type="button" href=" {{ path('d',{'id':var.id}) }} " ><i class="fa-solid fa-trash"></i>Delete   </a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}