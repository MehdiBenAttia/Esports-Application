                var value = $(this).val();
                if(currentRequest != null) {
                    currentRequest.abort();
                }
                /* Ajax est lanc√© lors du remplissage du champ texte dont l‚Äôid est
                ¬´ search ¬ª pour faire la recherche */
                currentRequest = $.ajax({
                    url : "{{ path('ajaxcompetition') }}",
                    type : 'GET',
                    data: {
                        'searchValue' : value
                    },
                    success : function(retour)
