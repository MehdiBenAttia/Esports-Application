{% extends 'test.html.twig' %}
{% block body %}

    <script src="https://kit.fontawesome.com/85180f823b.js
" crossorigin="anonymous"></script>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>sujet</th>
                        <th>description</th>
                        <th>communaute</th>
                        <th>nbr_jaime</th>
                        <th>nom_user</th>
                        <th>image</th>

                        <th>date_p</th>
                        <th>nbr_com</th>

                        <th>Delete</th>
                        <th>Update</th>
                        <th>add</th>

                    </tr>
                    </thead>
                    <tbody>

                    <tr {% for var in c %}>

                    <tr>
                        <td>{{ var.id }}</td>
                        <td>{{ var.sujet }}</td>
                        <td>{{ var.description }}</td>
                        <td>{{ var.communaute }}</td>
                        <td>{{ var.nbr_jaime }}</td>

                        <td>{{ var.nom_user }}</td>
                        {% if var.image is not null %}
                            <td> <img src="{{ asset('/images/'~var.image) }}" alt="" width="150"></td>
                        {%else  %}
                            <td></td>
                        {% endif %}

                        <td style="">{{ var.date_p|date('Y-m-d H:i:s') }}</td>
                        <td>{{ var.co }}</td>
                        <td><a href=" {{ path('dp',{'id':var.id}) }} " > <i class="fa-solid fa-trash-can"></i> </a></td>
                        <td><a href=" {{ path('Up',{'id':var.id}) }} " > <i class="fa-solid fa-wrench"></i> </a></td>
                        <td><a href="{{ path('Acob',{'id':var.id}) }}" ><i class="fa-solid fa-plus"></i> </a> </td>

                    </tr>








                    </tr {% endfor %}>



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



{% endblock %}