{% block body %}
    <script src="https://kit.fontawesome.com/85180f823b.js
" crossorigin="anonymous"></script>



    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Welcome to Dashboard</h4>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th> ID </th>
                            <th> nom user </th>
                            <th> description </th>

                            <th> image </th>
                            <th> date </th>
                            <th> post </th>
                            <th>delete</th>
                            <th>update</th>


                        </tr>
                        </thead>
                        <tbody>

                        {% for c in post.commentaires %}
                        <tr >


                            <td> {{ c.id }}</td>
                            <td> {{ c.nomuser }}</td>
                            <td> {{ c.descriptionc }}</td>

                            {% if c.imagec is not null %}
                                <td> <img src="{{ asset('/images/'~c.imagec) }}" alt="" width="150"></td>
                            {%else  %}
                                <td></td>
                            {% endif %}


                            <td style="">{{ c.datec|date('Y-m-d H:i:s') }}</td>
                            {% if c.post is not null %}
                                <td> {{ c.post.id}}</td>
                            {% endif %}
                            <td><a href=" {{ path('dc',{'id':c.id}) }} " > <i class="fa-solid fa-trash-can"></i> </a></td>












                            <td><a href="{{ path('Uco',{'id':c.id}) }}" ><i class="fa-solid fa-wrench"></i> </a> </td>




                        </tr >
                        {% endfor %}



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}