{% extends 'crud.html.twig' %}
{% block body %}




    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gestion des catégories</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th> ID </th>
                            <th> Catégorie de la réclamation </th>
                            <th> Date </th>



                            <th>Delete</th>
                            <th>Update</th>

                        </tr>
                        </thead>
                        <tbody>

                        <tr {% for c in categorie %}>

                            <td> {{ c.id }}</td>

                            <td> {{ c.catrec }}</td>
                            <td> {{ c.date|date('d-m-Y H:i:s') }}</td>





                            <td>  <a  href=" {{ path('dc',{'id':c.id}) }} "  > Delete
                                    <img src="back/images/faces/bin.jpg" alt="image"/>



                                </a>


                            </td>

                            <td><a href="{{ path('Uc',{'id':c.id}) }}" > Update</a> </td>




                        </tr {% endfor %}>



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}