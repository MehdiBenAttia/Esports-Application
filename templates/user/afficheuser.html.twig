{% extends 'basefront.html.twig' %}


{% block body %}
<body>

<style>
    tr{
        background-color: #171E22;
    }
</style>

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body" style="background-color: #171E22">
            <h4 class="card-title">Les membres E-Tsports</h4>
            <p class="card-description">
                </code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                    <tr>

                        <th>
                            First name
                        </th>
                        <th>
                          Last name
                        </th>
                        <th>
                          Email
                        </th>
                        <th>
                            Date De Naissance
                        </th>
                        <th>
                            Sexe
                        </th>
                        <th>
                            Equipe
                        </th>

                        <th>
                            Delete
                        </th>
                        <th>
                           Modify
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for u in u %}
                        <tr >


                            <td>
                                {{ u.nom }}
                            </td>

                            <td>
                                {{ u.prenom}}
                            </td>

                            <td>
                                {{ u.email}}
                            </td>

                            <td>
                                {{ u.dateN |date('d-m-Y') }}
                            </td>

                            <td>
                                {{u.sexe}}
                            </td>

                            <td>
                                {% if u.equipe is not null %}

                                    {{u.equipe.NomEquipe}}

                                {% endif %}
                            </td>


                            <td>
                                {% if is_granted("ROLE_CLIENT") and app.user.id==u.id %}
                                <a href="{{ path('d',{'id':u.id}) }}"> Delete</a>
                                {% endif %}
                            </td>

                            <td>

                                {% if is_granted("ROLE_CLIENT") and app.user.id==u.id %}
                                <a href="{{ path('m',{'id':u.id}) }}"> Modify</a>
                                {% endif %}
                            </td>

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
