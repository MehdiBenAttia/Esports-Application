{% extends 'crud.html.twig' %}
{% block body %}




    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Gestion des catégories</h4>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th> ID </th>
                            <th> Catégorie de la réclamation </th>
                            <th> Description de la catégorie  </th>
                            <th> Date </th>

                            <th> level </th>


                            <th>Delete</th>
                            <th>Update</th>

                        </tr>
                        </thead>
                        <tbody>

                        <tr {% for c in cat %}>

                            <td> {{ c.id }}</td>

                            <td> {{ c.catrec }}</td>
                            <td
                                    style="word-wrap: break-word;
                                min-width: 160px;
                                max-width: 160px;
                                white-space: normal;"
                            > {{ c.descrip }}</td>
                            <td> {{ c.date|date('d-m-Y H:i:s') }}</td>

                            <td> {{ c.level }}</td>




                            <td>  <a  href=" {{ path('dc',{'id':c.id}) }} "  > Delete
                                    <img src="back/images/faces/bin.jpg" alt="image"/>



                                </a>


                            </td>

                            <td><a href="{{ path('Uc',{'id':c.id}) }}" > Update</a> </td>




                        </tr {% endfor %}>
                        {{ knp_pagination_render(cat) }}


                        </tbody>


                    </table>
                    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"
                            type="text/javascript"></script>
                    <script src="//code.highcharts.com/4.0.1/highcharts.js"></script>
                    <script src="//code.highcharts.com/4.0.1/modules/exporting.js"></script>
                    <script type="text/javascript">
                        {{ chart(chart) }}
                    </script>
                    <div id="piechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>{# empty
Twig template #}

                </div>
            </div>
        </div>
    </div>



{% endblock %}