<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="480.0" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.gui.InscriptionController">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="480.0" prefWidth="480.0" styleClass="blue-panel" stylesheets="@Styles.css">
         <children>
            <Label text="Inscrivez-Vous" textFill="#119dd6">
               <font>
                  <Font size="32.0" />
               </font>
               <VBox.margin>
                  <Insets left="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="user_nom" prefHeight="38.0" prefWidth="482.0" promptText="Nom" styleClass="tf_box" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="user_prenom" prefHeight="38.0" prefWidth="482.0" promptText="Prenom" styleClass="tf_box" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </TextField>
            
            <TextField fx:id="user_username" prefHeight="38.0" prefWidth="482.0" promptText="Username" styleClass="tf_box" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="user_email" prefHeight="38.0" prefWidth="482.0" promptText="Email" styleClass="tf_box" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="user_telephone" prefHeight="38.0" prefWidth="482.0" promptText="Telephone" styleClass="tf_box" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="user_password" prefHeight="38.0" prefWidth="482.0" promptText="Password" styleClass="tf_box" VBox.vgrow="ALWAYS">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="okok" prefHeight="38.0" prefWidth="482.0" promptText="dadad" styleClass="tf_box">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
    
            <Button fx:id="user_submit" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#user_add" prefHeight="30.0" prefWidth="462.0" styleClass="blue-btn" text="Button">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
