{% extends 'base.html.twig' %}
{% block stylesheets %}

    <link href="{{ asset('vendors/feather/feather.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('vendors/ti-icons/css/themify-icons.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('vendors/css/vendor.bundle.base.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('vendors/datatables.net-bs4/dataTables.bootstrap4.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('vendors/ti-icons/css/themify-icons.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('js/select.dataTables.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/vertical-layout-light/style.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('images/favicon.png') }}" type="text/css" rel="shortcut icon" />





{% endblock %}
{% block body %}

    <div class="card-body">
        <h4 class="card-title"><i class="fa-solid fa-circle-plus"></i>  Modifier</h4>
        <a class="btn btn-outline-dark " href="{{ path('afficheruserbackee') }}"><i class="fa-solid fa-gamepad"></i> afficher les joueurs  </a>
        <p class="card-description">
        </p>

        {{ form_start(f) }}
        <form class="forms-sample">

            <div class="form-group">
                {{ form_label(f.nom, 'Nom ', ) }}
                {{ form_widget(f.nom, {'attr': {'class': 'form-control','placeholder': 'Nom du jeu'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(f.prenom, 'Prenom', ) }}
                {{ form_widget(f.prenom, {'attr': {'class': 'form-control','placeholder': 'Nom du jeu'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(f.email, 'Email', ) }}
                {{ form_widget(f.email, {'attr': {'class': 'form-control','placeholder': 'Type du jeu'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(f.username, 'username', ) }}
                {{ form_widget(f.username, {'attr': {'class': 'form-control','placeholder': 'Type du jeu'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(f.dateN, 'Date de naissance', ) }}
                {{ form_widget(f.dateN, {'attr': {'class': 'form-control','placeholder': 'DD/MM/YYYY'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(f.sexe, 'sexe', ) }}
                {{ form_widget(f.sexe, {'attr': {'class': 'form-control','placeholder': 'sexe'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(f.password, 'password', ) }}
                {{ form_widget(f.password, {'attr': {'class': 'form-control','placeholder': 'password'}}) }}
            </div>
            <div class="form-check form-check-flat form-check-primary">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input">
                    Remember me
                </label>
            </div>
            <div class="input-group col-md-6">
                {{ form_widget(f.submit, {'attr': {'class': 'form-control btn btn-primary mr-2' }}) }}
                {{ form_widget(f.cancel, {'attr': {'class': 'form-control btn btn-light mr-2' }}) }}
            </div>

            {{ form_end(f) }}
        </form>
        <a href="{{ path('suppequipeback') }}">Supprimer ce joueur de l'equipe </a>

    </div>
{% endblock %}


