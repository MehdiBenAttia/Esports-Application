    <link href="{{ asset('vendors/ti-icons/css/themify-icons.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('vendors/css/vendor.bundle.base.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('vendors/datatables.net-bs4/dataTables.bootstrap4.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('vendors/ti-icons/css/themify-icons.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('js/select.dataTables.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/vertical-layout-light/style.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('images/favicon.png') }}" type="text/css" rel="shortcut icon" />





{% endblock %}

{% block body %}
    <div class="card-body">
        <h4 class="card-title">Ajouter un commentaire</h4>
        <p class="card-description">
        </p>

        {{ form_start(ff,{'attr': {'novalidate': 'novalidate'}}) }}
        <form class="forms-sample">


            <div class="form-group">
                {{ form_label(ff.imageFile, 'image', ) }}
                {{ form_row(ff.imageFile,{'attr': {'class': 'form-control file-upload-browse btn btn-primary' }}) }}
            </div>
            <div class="form-group">
                {{ form_label(ff.descriptionc, 'descriptionc', ) }}
                {{ form_widget(ff.descriptionc, {'attr': {'class': 'form-control','placeholder': 'descriptionc'}}) }}
                {{ form_errors(ff.descriptionc) }}
            </div>






            <div class="input-group col-md-6">
                {{ form_widget(ff.submit, {'attr': {'class': 'form-control btn btn-primary mr-2' }}) }}
                {{ form_widget(ff.cancel, {'attr': {'class': 'btn btn-danger' }}) }}
            </div>
            {{ form_end(ff) }}
        </form>

    </div>





{% endblock %}