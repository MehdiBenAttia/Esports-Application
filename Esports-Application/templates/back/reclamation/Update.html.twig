{% block body %}
    <div class="card-body">
        <h4 class="card-title">Modifier une r√©clamation</h4>
        <p class="card-description">
        </p>

        {{ form_start(f) }}
        <form class="forms-sample">

            <div class="form-group">
                {{ form_label(f.NomUser, 'NomUser', ) }}
                {{ form_widget(f.NomUser, {'attr': {'class': 'form-control','placeholder': 'NomUser'}}) }}
                {{ form_errors(f.NomUser) }}

            </div>
            <div class="form-group">
                {{ form_label(f.email, 'email', ) }}
                {{ form_widget(f.email, {'attr': {'class': 'form-control','placeholder': 'email'}}) }}
                {{ form_errors(f.email) }}

            </div>
            <div class="form-group">
                {{ form_label(f.Message, 'Message', ) }}
                {{ form_widget(f.Message, {'attr': {'class': 'form-control','placeholder': 'Message'}}) }}
                {{ form_errors(f.Message) }}
            </div>
            <div class="form-group">
                {{ form_label(f.categorie, 'categorie', ) }}
                {{ form_widget(f.categorie, {'attr': {'class': 'form-control','placeholder': 'categorie'}}) }}
                {{ form_errors(f.categorie) }}
            </div>





            <div class="input-group col-md-6">
                {{ form_widget(f.submit, {'attr': {'class': 'form-control btn btn-primary mr-2' }}) }}
                {{ form_widget(f.cancel, {'attr': {'class': 'form-control btn btn-light mr-2' }}) }}
            </div>
            {{ form_end(f) }}
        </form>

    </div>
{% endblock body %}
