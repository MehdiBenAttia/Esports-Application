{% block body %}

    <div class="card-body">
        <h4 class="card-title">Ajouter un jeu</h4>
        <p class="card-description">
        </p>

        {{ form_start(fpf) }}
        <form class="forms-sample">

            <div class="form-group">
                {{ form_label(fpf.sujet, 'sujet', ) }}
