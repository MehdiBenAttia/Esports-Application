                {{ form_widget(fpf.communaute, {'attr': {'class': 'form-control','placeholder': 'communaute'}}) }}
            </div>




            <div class="input-group col-md-6">
                {{ form_widget(fpf.submit, {'attr': {'class': 'form-control btn btn-primary mr-2' }}) }}
                {{ form_widget(fpf.cancel, {'attr': {'class': 'btn btn-danger' }}) }}
            </div>
            {{ form_end(fpf) }}
        </form>

    </div>
